<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_item_workflow"
    android:layout_margin="@dimen/dp_10"
    android:padding="@dimen/dp_10"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_workflow_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_workflow_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="李达康"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_primary"/>
            <TextView
                android:id="@+id/item_workflow_user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:text="工程主管"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/text_desc"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_workflow_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_action_phone"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_workflow_solution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="解决方案：--"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_primary"
        />
    <TextView
        android:id="@+id/item_workflow_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="预期时间：--"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_primary"
        />
    <LinearLayout
        android:id="@+id/item_ll_score"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/dp_10"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_workflow_score_label"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:text="评分："
            android:textColor="@color/text_primary"/>
        <com.idlestar.ratingstar.RatingStarView
            android:id="@+id/item_workflow_score"
            android:background="#fff"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_30"
            android:layout_marginStart="@dimen/dp_10"
            app:rsv_cornerRadius="3dp"
            app:rsv_starMargin="@dimen/sp_12"
            app:rsv_strokeWidth="2px"
            app:rsv_strokeColor="#457DD7"
            app:rsv_starForegroundColor="#DB6958"
            app:rsv_starBackgroundColor="#E8E8E8"
            app:rsv_starNum="5"
            app:rsv_rating="4.0"
            app:rsv_onlyHalfStar="true"
            app:rsv_enableSelectRating="true"
            app:rsv_starThickness="0.7"
            app:rsv_drawStrokeForEmptyStar="false"
            app:rsv_drawStrokeForHalfStar="true"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/item_workflow_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:text="家里水管爆了，快来快来，不然就要水漫金山了！家里水管爆了，快来快来，不然就要水漫金山了！"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_primary"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_workflow_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_workflow_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020-02-17 17:55"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_warn"/>
        <TextView
            android:id="@+id/item_workflow_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2020-02-17 17:55"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_desc"/>
    </LinearLayout>

</LinearLayout>
