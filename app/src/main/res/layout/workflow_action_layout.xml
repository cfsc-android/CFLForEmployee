                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"/>
                <EditText
                    android:id="@+id/director_dispatch_employee_c_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_box_desc_shape"
                    android:minLines="5"
                    android:gravity="top"
                    android:hint="输入补充内容"/>
            </LinearLayout>
            <Button
                android:id="@+id/director_dispatch_employee_c_submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:layout_gravity="center"
                android:background="@drawable/btn_solid_night_shape"
                android:text="提交"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!--员工实施投诉解决方案-->
        <LinearLayout
            android:id="@+id/workflow_action_employee_finish_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="照片"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/employee_finish_c_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"/>
                <EditText
                    android:id="@+id/employee_finish_c_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_box_desc_shape"
                    android:minLines="5"
                    android:gravity="top"
                    android:hint="输入补充内容"/>
            </LinearLayout>


            <Button
                android:id="@+id/employee_finish_c_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:layout_gravity="center"
                android:background="@drawable/btn_solid_night_shape"
                android:text="完成"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!--实施投诉解决方案是否完成-->
        <LinearLayout
            android:id="@+id/workflow_action_plan_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <Button
                android:id="@+id/plan_finish_reject"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:layout_gravity="center"
                android:background="@drawable/btn_box_night_shape"
                android:text="未完成"
                android:textColor="@color/text_desc"
                android:textSize="@dimen/sp_16" />
            <Button
                android:id="@+id/plan_finish_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_40"
                android:layout_margin="@dimen/dp_20"
                android:layout_gravity="center"
                android:background="@drawable/btn_solid_night_shape"
                android:text="完成"
                android:textColor="@color/text_white"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <!--=======================投诉流程处理 end============================-->

    </FrameLayout>


</LinearLayout>
