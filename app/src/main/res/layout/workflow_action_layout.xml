                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_box_desc_shape"
                    android:gravity="top"
