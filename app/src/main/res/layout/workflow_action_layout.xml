<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/workflow_action_toggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/workflow_action_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/workflow_action_toggle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_action_down"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/workflow_action_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">
        <!--=======================工单流程处理 start============================-->
        <!--客服接单-->
        <LinearLayout
            android:id="@+id/workflow_action_customer_accept_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容"/>
                <EditText
                    android:id="@+id/customer_accept_order_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_primary"
                    android:background="@drawable/bg_box_desc_shape"
                    android:minLines="5"
                    android:gravity="top"
                    android:hint="输入补充内容"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/customer_accept_order_reject"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_box_night_shape"
                    android:text="拒绝"
                    android:textColor="@color/text_desc"
                    android:textSize="@dimen/sp_16" />
                <Button
                    android:id="@+id/customer_accept_order_confirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_40"
                    android:layout_margin="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_solid_night_shape"
                    android:text="接受"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>



        </LinearLayout>

        <!--客服指派职能主管-->
