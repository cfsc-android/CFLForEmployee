<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_background">

    <LinearLayout
        android:id="@+id/login_ll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30">

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_40"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/bg_login_input_shape"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_et_name"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/login_icon_ren"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:hint="请输入用户名"
                android:lines="1"
                android:paddingLeft="@dimen/dp_20" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_login_input_shape"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_et_password"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="1"
                android:background="@null"
                android:drawableLeft="@drawable/login_icon_suo"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="@dimen/dp_20" />

        </LinearLayout>

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/btn_login_shape"
            android:text="@string/btn_login"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/login_tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_forget_password"
            android:text="@string/txt_forget_password"/>

    </LinearLayout>
</FrameLayout>
