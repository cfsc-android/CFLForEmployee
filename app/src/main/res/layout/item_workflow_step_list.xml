<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/workflow_step_up_line"
        android:layout_width="1px"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_130"
        android:background="@color/text_desc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_40"
            android:gravity="right"
            android:orientation="vertical">
            <TextView
                android:id="@+id/workflow_step_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-12-12"/>
            <TextView
                android:id="@+id/workflow_step_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-12-12"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/workflow_step_avatar"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/workflow_step_press"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical"
            android:text="电话沟通业主"/>
    </LinearLayout>

    <TextView
        android:id="@+id/workflow_step_down_line"
        android:layout_width="1px"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_130"
        android:background="@color/text_desc"/>
</LinearLayout>
