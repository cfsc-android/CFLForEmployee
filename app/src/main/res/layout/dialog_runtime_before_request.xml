<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_conner_white"
    android:layout_marginLeft="@dimen/dp_44"
    android:layout_marginRight="@dimen/dp_44">

    <TextView
        android:id="@+id/tv_dialog_permission_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:text="关闭"/>

    <ImageView
        android:id="@+id/iv_dialog_permission"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_below="@+id/tv_dialog_permission_close"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_dialog_permission_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_permission"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textColor="#232323"
        android:textSize="22sp"
        tools:text="权限名" />

    <TextView
        android:id="@+id/tv_dialog_permission_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_dialog_permission_title"
        android:layout_marginLeft="@dimen/dp_30"
        android:gravity="center"
        android:layout_marginRight="@dimen/dp_30"
        android:lineSpacingExtra="@dimen/dp_8"
        android:textColor="#666666"
        android:textSize="15sp"
        tools:text="权限描述" />

    <TextView
        android:id="@+id/tv_dialog_permission_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="#fff"
        android:layout_below="@+id/tv_dialog_permission_description"
        android:text="去授权"
        android:background="@drawable/btn_green_shape"/>

</RelativeLayout>